{
    "templateRepo": "https://github.com/Spooner8/dynamic-express-boilerplate.git",
    "placeholders": [
        {
            "key": "__PROJECT_NAME__",
            "question": "Projectname:",
            "default": "myproject",
            "fileTargets": [
                "package.json",
                "README.md",
                "nginx.conf",
                "docker-compose.yaml"
            ]
        },
        {
            "key": "__DESCRIPTION__",
            "question": "Description:",
            "default": "Flexible Express API",
            "fileTargets": [
                "package.json"
            ]
        },
        {
            "key": "__PORT__",
            "question": "Port (z.B. 3000):",
            "default": "3000",
            "fileTargets": [
                ".env",
                "api.env",
                "nginx.conf"
            ]
        },
        {
            "key": "__DB_NAME__",
            "question": "Database name:",
            "default": "mydatabase",
            "fileTargets": [
                ".env",
                "db.env",
                "docker-compose.yaml"
            ]
        },
        {
            "key": "__RBAC__",
            "question": "Activate Rolebased access controle? (yes/no):",
            "default": "no",
            "fileTargets": [
                ".env",
                "api.env"
            ]
        },
        {
            "key": "__GOOGLE_AUTH__",
            "question": "Activate Google Auth? (yes/no):",
            "default": "no",
            "fileTargets": [
                ".env",
                "api.env"
            ]
        },
        {
            "key": "__COLLECT_METRICS__",
            "question": "Activate metrics collection with prometheus/grafana? (yes/no):",
            "default": "no",
            "fileTargets": [
                ".env",
                "api.env"
            ]
        },
        {
            "key": "__LAAS__",
            "question": "Activate the Logger as a service? (yes/no):",
            "default": "no",
            "fileTargets": [
                ".env",
                "api.env"
            ]
        },
        {
            "key": "__RATE_LIMITER__",
            "question": "Activate the rate limiter? (yes/no):",
            "default": "yes",
            "fileTargets": [
                ".env",
                "api.env"
            ]
        },
        {
            "key": "__ESLINT__",
            "question": "Want to use ESLint? (yes/no):",
            "default": "no",
            "fileTargets": []
        }
    ]
}